<% @mediaData.each do |media| %>
    <div class="col">
        <div class="card mb-3 h-100" style="width: calc((100% - 100px) / 3;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <% if media["Poster"] == "N/A" %>
                        <%= image_tag "notfound.png", class: "card-img-top img-fluid rounded-start" %>
                    <% else %>
                        <img class="card-img-top" src="<%= media["Poster"] %>" alt="Media Poster">
                    <% end %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h6 class="card-title"><%= media["Title"] %></h6>
                        <div class = "overflow-scroll"  style = "max-height: 100px">
                            <p class="card-text overflow-auto"><%= media["Plot"] %></p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <%= link_to "Show Details", showDetails_path(:mediaInfo => media), class: "btn btn-sm btn-outline-secondary" %>
                            <%= link_to "Add #{media["Type"]}", createImdb_path(
                                :user_id => current_user.id,
                                :imdb_id => media["imdbID"],
                                :poster_url => media["Poster"],
                                :media_type => media["Type"],
                                :title => media["Title"],
                                :director => media["Director"],
                                :genre => media["Genre"],
                                :rating => media["imdbRating"],
                                :summary => media["Plot"]),
                            class: "btn btn-sm btn-outline-secondary" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>








