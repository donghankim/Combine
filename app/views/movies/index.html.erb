<h1>My Movies</h1>
<br/>
<br/>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Director</th>
      <th>Movie stars</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @movies.each_with_index do |movie, index| %>
      <% if movie.user == current_user %>
        <tr>
          <td><%= link_to movie.name, movie %></td>
          <td><%= movie.director %></td>
          <td><%= movie.movie_stars %></td>
          <td><%= movie.year %></td>
          <td><%= movie.genre %></td>
          <td><%= movie.rating %></td>
          <td></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Movie', new_movie_path, class: "btn btn-outline-secondary" %>
