<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field mb-3">
    <%= form.text_field :name, class: "form-control", placeholder: "Game Title" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :company, class: "form-control", placeholder: "Director" %>
  </div>

  <div class="field mb-3">
    <%= form.number_field :year, class: "form-control", placeholder: "Year Released" %>
  </div>

  <div class="field mb-3">
    <div id="emailHelp" class="form-text">List all relevant genres</div>
    <%= form.text_field :genre, class: "form-control", placeholder: "Genre" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :rating, class: "form-control", placeholder: "Rating" %>
  </div>

  <div class="action">
    <%= form.submit class:'btn btn-outline-secondary' %>
    <%= link_to 'Return', root_path, class: "btn btn-outline-secondary" %>
<% end %>
