
<main>
  <div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        <%= image_tag "logo.png", width: 100, height: 60 %>
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <% if user_signed_in? %>
          <li class = "cool"><%= link_to 'Search', root_path, class: "nav-link px-2 link-dark my_link" %></li>
        <% end %>
        <li class = "cool"><%= link_to 'My Media', home_media_path, class: "nav-link px-2 link-dark my_link" %></li>
        <li class = "cool"><%= link_to 'Recommendations', home_recommendations_path, class: "nav-link px-2 link-dark my_link" %></li>
        <li class = "cool"><%= link_to 'Friends', home_friends_path, class: "nav-link px-2 link-dark my_link" %></li>
        <li class = "cool"><%= link_to 'About', home_about_path, class: "nav-link px-2 link-dark my_link" %></li>
      </ul>

      <div class="col-md-3 text-end">
        <% if user_signed_in? %>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-outline-primary me-2" %>
          <%= link_to 'Sign Out', destroy_user_session_path,  method: :delete, class: "btn btn-primary" %>
        <% end %>
      </div>
    </header>
  </div>
</main>



